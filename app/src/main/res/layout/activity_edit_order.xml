<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.edit.order.EditOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_id_text_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/order_time_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group_edit_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pending_radio_button_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending" />

        <RadioButton
            android:id="@+id/shipped_radio_button_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipped" />

        <RadioButton
            android:id="@+id/arrived_radio_button_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrived" />

        <RadioButton
            android:id="@+id/cancelled_radio_button_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelled" />

    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_ordered_items_recycler_view_edit_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_total_text_edit_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_button_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/cancel_button_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/save_button_edit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="Save" />
    </LinearLayout>

</LinearLayout>